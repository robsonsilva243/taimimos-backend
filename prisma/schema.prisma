generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Client {
  id          Int           @id @default(autoincrement())
  nome        String
  telefone    String?
  email       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime
  Installment Installment[]
  orders      Order[]
}

model Order {
  id           Int           @id @default(autoincrement())
  descricao    String?
  valor        Float
  parcelas     Int
  status       String        @default("Pendente")
  dataEntrega  String?
  clientId     Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime
  installments Installment[]
  client       Client        @relation(fields: [clientId], references: [id])
}

model Installment {
  id            Int      @id @default(autoincrement())
  numero        Int
  totalParcelas Int
  valor         Float
  vencimento    String
  status        String   @default("Pendente")
  orderId       Int
  clientId      Int
  createdAt     DateTime @default(now())
  Client        Client   @relation(fields: [clientId], references: [id])
  order         Order    @relation(fields: [orderId], references: [id])
}
